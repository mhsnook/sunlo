{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Sunlo",
	"version": "0.4.9",
	"identifier": "com.sunlo.app",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "pnpm build && pnpm tauri:prepare",
		"frontendDist": "../dist/client"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "Sunlo",
				"width": 1024,
				"height": 768,
				"resizable": true,
				"fullscreen": false,
				"minWidth": 375,
				"minHeight": 667
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"iOS": {
			"developmentTeam": ""
		}
	}
}
